{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/browser",
    "rootDir": "./node",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["node/**/*.ts"],
  "exclude": ["node/**/*.test.ts", "node/server.ts"]
}
